<!-- res/layout/color_palette_popup.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageView
        android:id="@+id/color_1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/palette_color1"
        android:layout_marginHorizontal="8dp" />

    <ImageView
        android:id="@+id/color_2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/palette_color2"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/color_3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/palette_color3"
        android:layout_marginEnd="8dp" />

    <ImageView
        android:id="@+id/color_4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/background_circular"
        android:backgroundTint="@color/palette_color4"
        android:layout_marginEnd="8dp" />
</LinearLayout>
